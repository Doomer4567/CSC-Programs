{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    
    "version": "0.2.0",
    "configurations": [
        
        {
        "name": "Debug C++",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}\\Main.exe", // Path to your compiled .exe or .out file
        "args": ["graph1.txt"], // Replace with your arguments
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb", // or "lldb" if you're using lldb
        
        "preLaunchTask": "build", // Ensure there's a build task in tasks.json
        "setupCommands": [
            {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
            }
        ],
        }
    ]
}